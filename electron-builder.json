{
  "appId": "com.example.clipfakebook",
  "productName": "ClipFakeBook",
  "directories": {
    "output": "dist-app"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "package.json"
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}